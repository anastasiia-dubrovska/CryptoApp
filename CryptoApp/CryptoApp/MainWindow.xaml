<Window x:Class="CryptoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CryptoApp" Height="600" Width="900">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="Gray">
      <Button Content="Home" Click="GoToMainPage" Width="100" Margin="5"/>
      <Button Content="Search" Click="GoToSearchPage" Width="100" Margin="5"/>
    </StackPanel>
    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
  </DockPanel>
</Window>
