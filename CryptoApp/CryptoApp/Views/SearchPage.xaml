<Page x:Class="CryptoApp.Views.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Search Page">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Search Cryptocurrency" FontSize="24" FontWeight="Bold" Margin="0,10,0,20"/>
            <TextBox x:Name="SearchBox" Width="300" Height="30" PlaceholderText="Enter name or code"/>
            <Button Content="Search" Width="100" Margin="0,10,0,10"/>
            <ListView x:Name="SearchResults" Width="400" Height="300"/>
        </StackPanel>
    </Grid>
</Page>
